# EditorConfig: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,astro,json,md}]
indent_style = tab
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.yml, *.yaml]
indent_style = space
indent_size = 2
